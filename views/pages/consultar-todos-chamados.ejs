<!-- Inicio area table -->
<section class="feature-area section-gap" id="feature">
    <div class="container">
        <br>
        <div class="row">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="tc-1">Id</th>
                            <th class="tc-2">Cliente</th>
                            <th class="tc-3">Tipo</th>
                            <th class="tc-4">Status</th>
                            <th class="tc-5">Título</th>
                            <th class="tc-5">Data Criação</th>
                            <th class="tc-7">Ações</th>
                        </tr>
                    </thead>
                    <tbody id="demo">
                        <% for(i = 0; i < chamados.length; i++){ %>
                            <% let id = chamados[i].id %>
                            <% let nome = chamados[i].cliente.nome %>
                            <% let sobrenome = chamados[i].cliente.sobrenome %>
                            <% let tipo = chamados[i].tipo %>
                            <% let status = chamados[i].status %>
                            <% let titulo = chamados[i].titulo %>
                            <% let data = chamados[i].dataCriacao %>
                            <tr>
                                <td><%= id %></td>
                                <td><%= nome %> <%= sobrenome %></td>
                                <%if (tipo === 1) { %>
                                    <td>Dúvida</td>
                                <% } else if (tipo === 2) { %>
                                    <td>Melhoria</td>
                                <% } else if (tipo === 3) { %>
                                    <td>Problema</td>
                                <% } %>
                                                        
                                <%if (status === 1) { %>
                                    <td>Sucesso</td>
                                <% } else if (status === 2) { %>
                                    <td>Em Análise</td>
                                <% } else if (status === 3) { %>
                                    <td>Aguardando Retorno</td>
                                <% } else if (status === 4) { %>
                                    <td>Pendente</td>
                                <% } %>
                                <td><%= titulo %></td>
                                <td><%= data %></td>
                                <td><a onclick='consultar("<%= id %>")' class='btn btn-primary btn-conf-admin mr-1' style='color: #fff;'>
                                    <span class='lnr lnr-magnifier'></span> Consultar</a>
                                    <a onclick='alterar("<%= id %>")' class='btn btn-info btn-conf-admin mr-1' style='color: #fff;'><span class='lnr lnr-pencil'></span> Alterar</a>
                                    <a data-toggle='modal' onclick='finalizar("<%= id %>")' href='#delete-modal' class='btn btn-danger btn-conf-admin' style='color: #fff;'>
                                    <span class='lnr lnr-trash'></span> Finalizar</a></td>
                                </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-lg-12 text-center mt-10">
                <% if(header === "gerente") { %> 
                    <a href="/gerente-cadastra-chamados" class="btn btn-dark" id="add_button">Criar Chamado</a>
                <% } else if(header === "analist2") {%>
                    <a href="/analist2-cadastra-chamados" class="btn btn-dark" id="add_button">Criar Chamado</a>
                <% } else {%>
                    <a href="/analist1-cadastra-chamados" class="btn btn-dark" id="add_button">Criar Chamado</a>
                <% } %>
                    
                
            </div>
        </div>
    </div>
</section>
<!-- Fim area table-->
<!--modal -->
<div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header login_modal_header-succes">

                <h2 class="modal-title" id="myModalLabel">Confirmar</h2>
            </div>
            <div class="modal-body login-modal">
                <div id="message">Tem certeza que quer finalizar este chamado?</div>
                <div id="finalizar">
                    <button data-dismiss="modal" aria-hidden="true" class="btn btn-succes modal-ok">Sim</button>
                    <button data-dismiss="modal" aria-hidden="true" class="btn btn-succes modal-ok">Não</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="js/jquery.dataTables.chamados.js"></script>
<script src="js/table-js.js"></script>
<% if(header === "gerente") { %> 
	<script src="js/gerente-chamado-page.js"></script>
<% } else if(header === "analist2") {%>
	<script src="js/analist2-chamado-page.js"></script>
<% } else {%>
    <script src="js/analist1-chamado-page.js"></script>
<% } %>
